<%= form_with model: @book do |f| %>
  
<% if @book.errors.any? %>
<%= @book.errors.count %>件のerrorが発生しました
<ul>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

  <h1>Editing Book</h1>
  <div class="field">
    <div class="Title">Title</div>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <div class="Body">Body</div>
    <%= f.text_area :body %>
  </div>
  
  <div>
  <%= f.button 'Update Book', class: 'btn btn-sm btn-success' %>
  </div>
  
  <div>
    <span class="book-show"><%= link_to "show", book_path(@book) %></span>
    <span> | </span>
    <span class="book-show"><%= link_to "back", books_path %></span>
  </div>
  
  <% end %>
  
  