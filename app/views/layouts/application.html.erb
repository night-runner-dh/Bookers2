<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/9dff7c622c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark text-white pt-5 pb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span></a>
          </a>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="navbar-collapse collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
             <li>
               <% if user_signed_in? %>
                  <%= link_to '<i class="fa-solid fa-house"></i> Homes'.html_safe, user_path(current_user.id), class:'nav-link text-light' %>
               <% else %>
                  <%= link_to '<i class="fa-solid fa-house"></i> Homes'.html_safe, root_path, class:'nav-link text-light' %>
               <% end %>
             </li>
              <% if user_signed_in? %>
              <li>
                <%= link_to '投稿フォーム', new_book_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to '<i class="fa-solid fa-book-open"></i> Books'.html_safe, books_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to '<i class="fa-solid fa-users"></i> Users'.html_safe, users_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to '<i class="fa-solid fa-arrow-right-from-bracket"></i> Log out'.html_safe, destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>
              </li>
              <% else %>
              
              <li>
                <%= link_to '<i class="fa-solid fa-link"></i> about'.html_safe, about_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to '<i class="fa-solid fa-user-plus"></i> sign up'.html_safe, new_user_registration_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to '<i class="fa-solid fa-right-to-bracket"></i> Log in'.html_safe, new_user_session_path, class:'nav-link text-light' %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <div class="container px-5 px-sm-0">
        <% flash.each do |message_type, message| %>
          <div class="flash-message" style="text-decoration: none;"><%= message %></div>
        <% end %>
        
      <div class="row">
        <div class="col-md-3">
          
           <h2>User info</h2>
         <div>
        <p>ここにユーザー画像を表示したい</p>
         </div>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <th>name</th>
           <th> user name</th>
           </tr>
           <tr>
             <th>introduction</th>
           <th></th>
           </tr>
         </tbody>
        </table>
        
        <div>
          <!--下記にhref=""でアドレス追記しないとeditにとべない-->
          <a class="btn btn-outline-secondary btn-block " > 
          <i class="fa-solid fa-user-pen"></i>
          </a>
        </div>
        
          <% if user_signed_in? %> 
   
          <h2>New book</h2>
          <%= form_with model: @book,  url: '/books' do |f| %>
            <h4>タイトル</h4>
            <%= f.text_field :title %>
            <h4>本文</h4>
            <%= f.text_area :body %>
            <%= f.submit '投稿' %>
          <% end %>
                 <% else %>
          <% end %>
        </div>
        
        <div class="col-md-8 offset-md-1">
          <%= yield %>
        </div>
      </div>
 
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </>
    </footer>
  </body>
</html>
