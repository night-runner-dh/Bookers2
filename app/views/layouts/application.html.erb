<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/9dff7c622c.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="bg-dark text-white pt-5 pb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span></a>
          </a>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <div class="navbar-collapse collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to 'Homes', top_path, class:'nav-link text-light' %>
              </li>
              <% if user_signed_in? %>
              <li>
                <%= link_to '投稿フォーム', new_book_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to 'マイページ', user_path(current_user.id), class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to 'Books', books_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to 'Users', users_path, class:'nav-link text-light' %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class:'nav-link text-light' %>
              </li>
              <% else %>
              
              <li>
                <%= link_to 'about', about_path %>
              </li>
              <li>
                <%= link_to "新規登録", new_user_registration_path %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
         
          <% if user_signed_in? %> 
          <% else %>
          <h1>新規投稿</h1>
          <%= form_with model: @book,  url: '/books' do |f| %>
            <h4>タイトル</h4>
            <%= f.text_field :title %>
            <h4>本文</h4>
            <%= f.text_area :body %>
            <%= f.submit '投稿' %>
          <% end %>
          <% end %>
        </div>
        
        <div class="col-md-8 offset-md-1">
          <%= yield %>
        </div>
      </div>
 
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </>
    </footer>
  </body>
</html>
